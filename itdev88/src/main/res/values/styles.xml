<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogPhoto" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/gradien_dialog2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

        <!--        Radio button unchecked-->
        <item name="android:colorControlNormal">@color/white</item>
        <!--        Radio button checked-->
        <item name="android:colorControlActivated">@color/white</item>
        <!--        List item on click highlight color-->
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
    </style>

</resources>